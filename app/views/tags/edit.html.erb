<div class='admin-form'>
  <h1 class='admin-tutorial'>Edit tag</h1>

  <%= form_for(@tag) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class='form-field'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <%= f.submit "Save tag", class: 'btn submit-btn' %>
  <% end %>
</div>