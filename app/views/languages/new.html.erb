<div class='admin-form'>
  <h1 class='admin-tutorial'>Add a language</h1>

  <%= form_for(@language) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class='form-field'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <%= f.submit "Add language", class: 'btn submit-btn' %>
  <% end %>
</div>